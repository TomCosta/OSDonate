<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>OSDonate</name>
	<author>Nick Savov from OsTraining.com</author>
	<creationDate>January 2011</creationDate>
	<copyright>(C) 2011 OSTraining.com</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>nick@ostraining.com</authorEmail>
	<authorUrl>http://www.ostraining.com</authorUrl>
	<version>1.1.1</version>
	<description>PLUGIN DESC</description>
	
	<languages>
		<language tag="en-GB">en-GB.mod_osdonate.ini</language>
	</languages>
	
    <files>
        <filename module="mod_osdonate">mod_osdonate.php</filename>
        <filename>index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    
    <params>
		<param name="@spacer" type="spacer" default="OS SPACER DEFAULT" label="OSDonate" description="OS SPACER DESC" />
    	<param name="@spacer" type="spacer" default=" " label=" " description=" " />
		<param name="moduleclass_sfx" type="text" default="" label="MODULE CLASS SUFFIX LABEL" description="MODULE CLASS SUFFIX DESC" />
    	<param name="open_new_window" type="radio" default="1" label="OPEN IN NEW WINDOW LABEL" description="OPEN IN NEW WINDOW DESC">
			<option value="1">YES</option>
			<option value="0">N0</option>
		</param>
		
		<param name="@spacer" type="spacer" default=" " label=" " description=" " />
		<param name="return" type="text" size="64" default="http://www.mysite.com/anypage.html" label="SUCCESS RETURN PAGE LABEL" description="SUCCESS RETURN PAGE DESC" />
		<param name="cancel_return" type="text" size="64" default="http://www.mysite.com/anypage2.html" label="CANCEL RETURN PAGE LABEL" description="CANCEL RETURN PAGE DESC" />
		<param name="image_url" type="text" size="64" default="http://www.mysite.com/pathto/logo" label="COMPANY LOGO LABEL" description="COMPANY LOGO DESC" />
		<param name="pp_image" type="text"  size="64" default="https://www.paypal.com/en_US/i/btn/btn_donateCC_LG.gif" label="PAYPAL BUTTON IMAGE LABEL" description="PAYPAL BUTTON IMAGE DESC" />
		
		<param name="@spacer" type="spacer" default=" " label=" " description=" " />
		<param name="show_text" type="radio" default="1" label="SHOW INTRO TEXT LABEL" description="SHOW INTRO TEXT DESC">
			<option value="1">YES</option>
			<option value="0">N0</option>
		</param>
		<param name="intro_text" type="textarea" rows="3" cols="35" default="Please consider supporting our efforts." label="INTRO TEXT LABEL" description="INTRO TEXT DESC" />
				
		<param name="@spacer" type="spacer" default=" " label=" " description=" " />
		<param name="business" type="text" size="32" default="email@website.com" label="PAYPAL CREDENTIALS LABEL" description="PAYPAL CREDENTIALS DESC" />
    	<param name="item_name" type="text" size="64" default="Donate to website.com" label="PAYPAL DONATION DESCRIPTION LABEL" description="PAYPAL DONATION DESCRIPTION DESC" />
    	<param name="currencies" type="text" size="64" maxlength="100" default="USD,EUR,GBP,CHF,AUD,HKD,CAD,JPY,NZD,SGD,SEK,DKK,PLN,NOK,HUF,CZK,ILS,MXN" label="CURRENCIES LABEL" description="CURRENCIES DESC" />
		<param name="locale" type="list" default="en_US" label="PAYPAL LANGUAGE LABEL" description="PAYPAL LANGUAGE DESC">
			<option value="en_US">en_US</option>
			<option value="it_IT">it_IT</option>
			<option value="de_DE">de_DE</option>
			<option value="fr_FR">fr_FR</option>
			<option value="es_ES">es_ES</option>
		</param>
		
		<param name="@spacer" type="spacer" default=" " label=" " description=" " />
		<param name="show_amount" type="radio" default="1" label="SHOW AMOUNT FIELD LABEL" description="SHOW AMOUNT FIELD DESC">
			<option value="1">YES</option>
			<option value="0">N0</option>
		</param>
		<param name="amount" type="text" size="5" default="" label="" description="AMOUNT DESC" />
		
		<param name="@spacer" type="spacer" default=" " label=" " description=" " />
		<param name="@spacer" type="spacer" default="STICKY HOVER SETTINGS" label="OSDonate" description="OS SPACER DESC" />
		<param name="@spacer" type="spacer" default=" " label=" " description=" " />		

		<param name="use_sticky_hover" type="radio" default="1" label="USE STICKY HOVER LABEL" description="USE STICKY HOVER DESC">
			<option value="1">YES</option>
			<option value="0">N0</option>
		</param>

		<param name="horizontal_reference_side" type="radio" default="right" label="HORIZONTAL REFERENCE SIDE LABEL" description="HORIZONTAL REFERENCE SIDE DESC">
			<option value="right">RIGHT</option>
			<option value="left">LEFT</option>
		</param>
        <param name="horizontal_distance" type="text" size="5" default="0" label="HORIZONTAL DISTANCE LABEL" description="HORIZONTAL DISTANCE DESC" />		

		<param name="vertical_reference_side" type="radio" default="bottom" label="VERTICAL REFERENCE SIDE LABEL" description="VERTICAL REFERENCE SIDE DESC">
			<option value="bottom">BOTTOM</option>
			<option value="top">TOP</option>
		</param>
		<param name="vertical_distance" type="text" size="5" default="0" label="VERTICAL DISTANCE LABEL" description="VERTICAL DISTANCE DESC" />
		
		<param name="font_color" type="text" size="16" default="" label="FONT COLOR LABEL" description="FONT COLOR DESC" />
		
		<param name="width_of_sticky_hover" type="text" size="5" default="200" label="WIDTH LABEL" description="WIDTH DESCRIPTION" />
	</params>
    

  
</install>